<div class="container">
  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <h2 class="px-4 mt-4 ml-4"><strong>会員情報編集</strong></h2>
    </div>
  </div>

    <%= form_with model:@customer do |f| %>
    <table class="table table-borderless px-4 mt-4 ml-4">
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, class: "form-control name" %></td>
        <td><%= f.text_field :first_name, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_kana_name, class: "form-control name" %></td>
        <td><%= f.text_field :first_kana_name, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :zip_code, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, class: "form-control name" %></td>
      </tr>
      <tr>
        <td><%= f.submit "編集内容を保存" , class: "btn btn-success" %></td>
        <td><%= link_to "退会する", customer_unsubscribe_path, class: "btn btn-danger" %></td>
      </tr>
    </table>
    <% end %>
</div>


