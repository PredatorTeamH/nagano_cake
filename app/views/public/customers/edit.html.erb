<!--会員情報編集画面-->
<h2><strong>会員情報編集</strong></h2>
  <table class="table">
    <%= form_with_model:@customer do |f| %>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name, class: "form-control name" %></td>
      <td><%= f.text_field :first_name, class: "form-control name" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_kana_name, class: "form-control name" %></td>
      <td><%= f.text_field :first_kana_name, class: "form-control name" %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :zip_code, class: "form-control name" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, class: "form-control name" %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :phone_number, class: "form-control name" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email, class: "form-control name" %></td>
    </tr>
    <% end %>
  </table>
  
  <table class="table">
    <tr>
      <td><h2><strong>配送先</strong></h2></td>
      <!--配送先一覧にリンク-->
      <td><%= link_to shipping_addresses_path, class: "btn btn-primary btn-sm btn-block mb-3" %></td>
    </tr>
    <tr>
      <td><h2><strong>注文履歴</strong></h2></td>
      <!--注文履歴一覧にリンク-->
      <td><%= link_to orders_path, class: "btn btn-primary btn-sm btn-block mb-3" %></td>
    </tr>
    
    
  </div>