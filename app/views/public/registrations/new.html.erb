<div class="container">
  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <h5 class="d-inline-flex bg-light px-4 my-4 ml-4">新規会員登録</h5>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <label class="mb-0">名前</label>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.label :last_name, "(姓)", class: "mb-0" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", size: 25 %>
          </div>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.label :first_name, "(名)", class: "mb-0" %>
            <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子", size: 25 %>
          </div>
        </div>
      </div>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <label class="mb-0">フリガナ</label>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.label :last_kana_name, "(セイ)", class: "mb-0" %>
            <%= f.text_field :last_kana_name, autocomplete: "last_kana_name", placeholder: "レイワ", size: 25 %>
          </div>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.label :first_kana_name, "(メイ)", class: "mb-0" %>
            <%= f.text_field :first_kana_name, autocomplete: "first_kana_name", placeholder: "ミチコ", size: 25 %>
          </div>
        </div>
      </div>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <%= f.label :email, "メールアドレス", class: "mb-0", style: "white-space: nowrap;" %>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", size: 25 %>
          </div>
        </div>
      </div>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <%= f.label :zip_code, "郵便番号(ハイフンなし)", class: "mb-0", style: "white-space: nowrap;" %>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.text_field :zip_code, autocomplete: "zip_code", placeholder: "0000000", size: 25 %>
          </div>
        </div>
      </div>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <%= f.label :address, "住所", class: "mb-0", style: "white-space: nowrap;" %>
        </div>
        <div class="col-8">
          <div class="field text-right">
            <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", size: 70 %>
          </div>
        </div>
      </div>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <%= f.label :phone_number, "電話番号", class: "mb-0", style: "white-space: nowrap;" %>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.text_field :phone_number, autocomplete: "phone_number", placeholder: "00000000000", size: 25 %>
          </div>
        </div>
      </div>

      <div class="row align-items-center mb-2">
        <div class="col-2">
          <%= f.label :password, "パスワード(6文字以上)", class: "mb-0", style: "white-space: nowrap;" %>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.text_field :password, autocomplete: "new-password", size: 25 %>
          </div>
        </div>
      </div>

       <div class="row align-items-center mb-2">
        <div class="col-2">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "mb-0", style: "white-space: nowrap;" %>
        </div>
        <div class="col-4 text-right">
          <div class="field">
            <%= f.text_field :password_confirmation, autocomplete: "new-password", size: 25 %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

      <% end %>

      <div class="row">
        <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <h5 class="d-inline-flex bg-light px-4 my-4 ml-4">既に登録済みの方</h5>
        </div>
      </div>
      <%= render "public/shared/links" %>
      <a>からログインしてください。</a>
</div>