<div class="container">
  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <h3 class="px-4 my-4 ml-4"><strong>商品一覧</strong> <span class="small">(全<%= @items.total_count %>件)</span></h3>
    </div>
  </div>

<table class="item-table">
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image, size: '200x200' %></td>
        <td><%= item.name %></td>
        <td>¥<%= number_with_delimiter(item.tax_included_price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>

</div>
