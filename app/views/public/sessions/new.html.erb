<div class="container">
  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <h5 class="d-inline-flex bg-light px-4 my-4 ml-4">ログイン</h5>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>

  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <h6 class="d-inline-flex bg-light px-4 ml-5 mb-4">会員の方はこちらからログイン</h6>
    </div>
  </div>

  <div class="field-group row mb-2 d-flex align-items-center">
    <div class="col-3 pl-5">
      <%= f.label :email, "　　　メールアドレス", class: "mb-0", style: "white-space: nowrap;" %>
    </div>
    <div class="field col-6 p-0">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
    </div>
  </div>

  <div class="field-group row mb-2 d-flex align-items-center">
    <div class="col-3 pl-5">
      <%= f.label :password, "　　　パスワード", class: "mb-0", style: "white-space: nowrap;" %>
    </div>
    <div class="field col-6 p-0">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions row mt-4 mb-5">
    <div class="col-3 pl-5">
    </div>
    <div class="field col-2 p-0">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <% end %>

  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <h6 class="d-inline-flex bg-light px-4 ml-5 mb-4">会員登録がお済みでない方</h6>
    </div>
  </div>

  <%= render "public/shared/links" %>

</div>
