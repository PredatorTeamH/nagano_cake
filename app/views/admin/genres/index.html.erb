<div class='container'>
  <div class='row pt-4'>
    <h4><strong>ジャンル一覧・追加</strong></h4>
  </div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row pt-4">
      <div class="form-group mr-5">
        <%= f.label :name, 'ジャンル名' %>
      </div>
      <div class="form-group mr-5">
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </div>
      <div class="form-group mr-5">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row pt-4">
    <table class="table col-4 border-bottom">
      <thead>
        <tr class="text-center bg-light">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-right">
              <%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>