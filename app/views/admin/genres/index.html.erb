<div class='container pt-4'>

  <div class='col-4 bg-light'>
    <h5>ジャンル一覧・追加</h5>
  </div>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row mt-5">
      <div class="col-2">
        <%= f.label :name, 'ジャンル名' %>
      </div>
      <div class="col-3">
        <%= f.text_field :name %>
      </div>
      <div class="col-2">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>

  <table class="table mt-5 col-4">
    <thead>
      <tr class="text-center bg-light">
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="text-right pr-5"><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>