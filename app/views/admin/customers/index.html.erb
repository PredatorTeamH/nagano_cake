<div class="container">
  <div class="row">
    <div class="mx-auto col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <h2 class="px-4 mt-4 ml-4"><strong>会員一覧</strong></h2>
    </div>
  </div>
  <div class="row">
    <table class="table px-4 mt-4 ml-4">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_active %>
                <td class='text-success  font-weight-bold'><%= "有効" %></td>
              <% else %>
                <td class='text-muted font-weight-block'><%= "退会" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>