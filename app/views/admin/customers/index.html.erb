<div class="container">
  <div class="row">
    <h2><strong>会員一覧</strong></h2>
  </div>
  <div class="row">
    <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_active %>
                <td><%= "有効" %></td>
              <% else %>
                <td><%= "退会" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>