<div class="container">
  <div class="row">
    <h2><strong><%= @customer.first_name %>さんの会員情報編集</strong></h2>
  </div>
  
  <%= form_with model:@customer do |f| %>
    <table class="table">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, class: "form-control name" %></td>
        <td><%= f.text_field :first_name, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_kana_name, class: "form-control name" %></td>
        <td><%= f.text_field :first_kana_name, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :zip_code, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number, class: "form-control name" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, class: "form-control name" %></td>
      </tr>
      <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.label :is_active, "有効",  {value: :true, style: "display: inline-block;"} %> 
        <%= f.radio_button :is_active, true%>
      </td>
      <td>
        <%= f.label :is_active, "退会",  {value: :fales, style: "display: inline-block;"} %> 
        <%= f.radio_button :is_active, false %> 
      </td>
    </tr>
    </tbody>
  </table>
  <div><%= f.submit "変更を保存" , class: "btn btn-sm btn-success" %></div>
  <% end %>
</div>
  
  
  
  