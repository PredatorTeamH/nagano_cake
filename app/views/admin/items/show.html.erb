<div class="container">
  <div class="row pt-4">
    <div class="col-4">
      <h5>商品詳細</h5>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-4 mx-auto">
      <%= image_tag @item.get_image, size: "300x200" %>
    </div>

    <div class="col-8">
      <table>
        <tr>
          <td class="px-3 pb-3">商品名</td>
          <td class="px-3 pb-3"><%= @item.name %></td>
        </tr>
        <tr>
          <td class="px-3 pb-3">商品説明</td>
          <td class="px-3 pb-3"><%= @item.description %></td>
        </tr>
        <tr>
          <td class="px-3 pb-3">ジャンル</td>
          <td class="px-3 pb-3"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td class="px-3 pb-3">税込み価格<br>(税抜価格)</td>
          <td class="px-3 pb-3"><%= "#{number_with_delimiter(@item.with_tax_price)}（#{number_with_delimiter(@item.price)}）" %>円</td>
        </tr>
        <tr>
          <td class="px-3 pb-3">販売ステータス</td>
          <% if @item.is_selling == true %>
            <th class="text-success px-3 pb-3">販売中</th>
          <% else %>
            <th class="text-secondary px-3 pb-3">販売停止中</ht>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success" %>
  </div>
</div>