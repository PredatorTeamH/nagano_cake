<div class="container">
  <div class="row mt-4">
    <div class="col-4">
      <h5>商品詳細</h5>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-4 mx-auto">
    <%= image_tag @item.get_image, size: "300x200" %>
    </div>

    <div class="col-8">
      <table>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.description %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込み価格<br>(税抜価格)</td>
        <td><%= "#{@item.price}" %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <% if @item.is_selling == true %>
          <th class="text-success">販売中</th>
        <% else %>
          <th class="text-secondary">販売停止中</ht>
        <% end %>
      </tr>
    </table>
    <tr>
    </div>
  </div>
    <div class="text-center mt-3">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
</div>